import React, { useEffect, useState } from 'react';

const ScheduleInfo = () => {
  const [day, setDay] = useState('');
  const [time, setTime] = useState('');

  useEffect(() => {
    const updateDateTime = () => {
      const now = new Date();
      const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
      const currentDay = days[now.getDay()];
      const currentTime = now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

      setDay(currentDay);
      setTime(currentTime);
    };

    updateDateTime();
    const interval = setInterval(updateDateTime, 10000); // actualiza cada 10 segundos
    return () => clearInterval(interval);
  }, []);

  return (
    <>
      <div className="text-sm text-gray-300 mb-2">
        <span role="img" aria-label="calendar">ðŸ“…</span> Hoy: <span className="font-semibold">{day}</span>{' '}
        <span role="img" aria-label="clock">ðŸ•’</span> Hora actual: <span className="font-semibold">{time}</span>
      </div>
    </>
  );
};

export default ScheduleInfo;

